{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "newLine": "lf",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}